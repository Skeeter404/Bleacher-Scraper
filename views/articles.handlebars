<main>
    <div class="container center-align">
        <h2 style="color: white">Bleacher Report Articles</h2>
        <hr>
        {{#each article}}
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-3">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <button class="land-btn waves-effect waves-light btn teal darken-3" id="show-comments" data-id={{this._id}} data-hidden="true">add comment</button>
                    </div>
                    <div class="all-comments{{this.id}}" style="display: none" data-id={{this._id}}>
                        {{#each this.comment}}
                        <div class="each-comment">
                            <h3>{{this.title}}</h3>
                            <p>{{this.body}}</p>
                            <button id="delete-comment" data-id={{this._id}}>X</button>
                        </div>
                        {{/each}}
                        <input type="text" class="comment{{this._id}}">
                        <button class="land-btn waves-effect waves-light btn teal darken-3" id="submit-comment" data-id={{this._id}}>Submit</button>
                    </div>
                    <div class="card-action">
                        <a target="_blank" href={{link}}>View Article</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>