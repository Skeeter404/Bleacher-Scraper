<main>
<div class="container center-align">
    <h2 style="color: white">Bleacher Report Articles</h2>
    <hr>
    {{#each article}}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-3">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                </div>
                <div class="card-action">
                    <a target="_blank" href={{link}}>View Article</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
</main>